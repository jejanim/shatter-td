{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "outDir": "target/compiled",
    "rootDir": "./src",
    "declaration": false,
    "types": ["lua-types/5.3", "ceres-decl/ceres"]
  },
  "include": ["src"],
  "tstl": {
    "luaTarget": "5.3",
    "noHeader": true,
    "luaLibImport": "require",
    "noImplicitSelf": true
  }
}
